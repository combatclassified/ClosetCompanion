<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
android:shape="rectangle">

<!-- Gradient effect -->
<gradient
    android:type="linear"
    android:startColor="#4CAF50"
    android:endColor="#388E3C"
    android:angle="270" />

<!-- Rounded corners -->
<corners
    android:radius="10dp" />

<!-- Add some padding -->
<padding
    android:left="16dp"
    android:right="16dp"
    android:top="8dp"
    android:bottom="8dp" />

</shape>